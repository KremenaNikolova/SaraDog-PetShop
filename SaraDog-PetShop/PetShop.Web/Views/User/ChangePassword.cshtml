@model UserChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<div class="text-center mb-3">
    <h2>@ViewBag.Title</h2>
</div>

<hr class="mb-5" />


<form asp-action="ChangePassword" method="post">
    <div class="d-flex flex-column align-items-center">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger col-md-4 mb-3"></div>
        <div class="col-md-4">
            <label asp-for="@Model.OldPassword" class="form-label h6">Old Password</label>
            <input asp-for="@Model.OldPassword" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
        </div>
        <div class="col-md-4 mt-4">
            <label asp-for="@Model.NewPassword" class="form-label h6">New Password</label>
            <input asp-for="@Model.NewPassword" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
        </div>
        <div class="col-md-4 mt-4 mb-3">
            <label asp-for="@Model.ConfirmPassword" class="form-label h6">Confirm Password</label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" aria-required="true" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Change Password</button>
    </div>
</form>
