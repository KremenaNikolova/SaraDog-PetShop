@model IEnumerable<ItemIndexViewModel>

@{
    ViewBag.Title = "Favourite Products";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
    <h2 class="text-center">You do not have any favrourite products yet!</h2>
}
else
{
    <div class="row">
        @foreach (ItemIndexViewModel item in Model)
        {
            <partial name="_ItemPartial" model="item" />
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}