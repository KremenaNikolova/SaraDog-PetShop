@model ItemIndexViewModel

@{
    ViewBag.Title = "Product Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="container" style="display:inline">
        <a asp-area="" asp-controller="Item" asp-action="All" class="btn btn-primary profile-button mb-2 col-1" type="button">Back</a>
    
        <div class="row">
        <div class="col-5">
            <img class="card-img-top" style="width: 30rem;"
                 src="~/Images/@Model.Image" alt="House Image">
        </div>
        <div class="card col-7 border-0">
            <p style="font-size:25px;"><u>@Model.Title</u></p>
            <p>
                Price Per Month: 
                <b>$@Model.Price</b>
            </p>
            <p>@Model.Description</p>
            <p>Category: <b>@Model.Category</b></p>
            <form asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" method="post" class="mb-2">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    </div>
</div>