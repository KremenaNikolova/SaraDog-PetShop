@model ItemIndexViewModel

<div class="col-md-3">
    <div class="card mb-3">
        <img class="card-img-top" src="~/Images/@Model.Image" alt="Item Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <p class="mb-3 h5">Price: $@Model.Price</p>
            <div class="d-flex justify-content-center">
            <a asp-controller="Item" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
                <form asp-controller="Item" asp-action="AddToFavourites" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-sm ms-2 favorite-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="2rem" height="2rem" fill="red" class="bi bi-heart heart-icon" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>



